@model IEnumerable<Portfolio>
@{
	ViewData["Title"] = "PortfolioInfo";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
<div class="card-body">
<h4 class="card-title">Portfolio Info</h4>
<div class="table-responsive">
<table class="table table-striped">
<thead>
<tr>
<th>#</th>
<th>Image</th>
<th>Title</th>
<th>Description</th>
<th>Sil</th>
<th>Guncelle</th>
</tr>
</thead>
<tbody>
@foreach (var item in Model)
{
    <tr>
    <td>@item.Id</td>
    <td>@item.Image</td>
    <td>@item.Title</td>
    <td>@item.Description</td>
	<td><a href="/Portfolio/PortfolioDelete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
	<td><a href="/Portfolio/PortfolioEdit/@item.Id" class="btn btn-outline-success">Guncelle</a></td>
    </tr>
}
</tbody>
</table>
<br />
<td><a href="/Portfolio/PortfolioAdd/" class="btn btn-outline-info">Ekle</a></td>
<br />
</div>
</div>
</div>
</div>