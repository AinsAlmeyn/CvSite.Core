@model IEnumerable<AboutSlider>
@{
    ViewData["Title"] = "AboutSliderInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



                            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">About Slider Info</h4>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Slider Icon</th>
                              <th>Slider Basligi</th>
                              <th>Slider Kisa Aciklamasi</th>
                              <th>Sil</th>
                              <th>Güncelle</th>
                          </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                        {
                                            <tr>
                                                  <td>@item.SliderId</td>
                                                  <td>@item.SliderIcon</td>
                                                  <td>@item.SliderTitle</td>
                                                  <td>@item.SliderShortDescription</td>
                                                             <td><a href="/AboutSlider/AboutSliderDelete/@item.SliderId" class="btn btn-outline-danger">Sil</a></td>
                                                         <td><a href="/AboutSlider/AboutSliderEdit/@item.SliderId" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                        }
                      </tbody>
                    </table>
                    <br />
                    <td><a href="/AboutSlider/AboutSliderAdd/" class="btn btn-outline-info">Ekle</a></td>
                  </div>
                </div>
              </div>
            </div>