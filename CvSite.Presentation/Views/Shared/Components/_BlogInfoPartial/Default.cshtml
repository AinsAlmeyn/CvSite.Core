@model IEnumerable<BlogInfo>
@{
    ViewData["Title"] = "Default";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="journal" class="text-left paddsection">

      <div class="container">
        <div class="section-title text-center">
          <h2>journal</h2>
        </div>
      </div>

      <div class="container">
        <div class="journal-block">
          <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-lg-4 col-md-6">
                      <div class="journal-info">

                        <a href="/BlogDetail/Index/@item.BlogInfoId"><img src="@item.Image" class="img-responsive" alt="img"></a>

                        <div class="journal-txt">

                              <h4><a href="/BlogDetail/Index/@item.BlogInfoId">@item.Title</a></h4>
                          <p class="separator">@item.Description
                          </p>

                        </div>

                      </div>
                    </div>
                }

          </div>
        </div>
      </div>

    </div>