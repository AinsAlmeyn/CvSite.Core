@model Home
@{
    ViewData["Title"] = "NewHomeEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">New Home Edit</h4>
                  <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                      <label for="exampleInputName1">Photo</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Photo" asp-for="Photo">
                      <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Jobs</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Jobs giriniz" asp-for="Jobs">
                      <span asp-validation-for="Jobs" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">LinkInstagram</label>
                       <input type="text" class="form-control" id="exampleInputName1" placeholder="LinkInstagram giriniz" asp-for="LinkInstagram">
                      <span asp-validation-for="LinkInstagram" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail3">LinkLinkedin</label>
                       <input type="text" class="form-control" id="exampleInputName1" placeholder="LinkLinkedin giriniz" asp-for="LinkLinkedin">
                      <span asp-validation-for="LinkLinkedin" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Guncellemeleri Kaydet</button>
                  </form>
                </div>
              </div>
            </div>